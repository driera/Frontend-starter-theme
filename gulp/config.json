{
    "tasks": {
        "server": {
            "src": "web/"
        },
        "html": {
            "src": "app/views/",
            "dest": "web/",
            "entry": "index.html",
            "pattern": "**/*.html",
            "dependencies": []
        },
        "browserify": {
            "src": "app/scripts/",
            "dest": "web/js/",
            "entry": "main.js",
            "pattern": "**/*.js",
            "dependencies": []
        },
        "css": {
            "src": "app/styles/",
            "dest": "web/css/",
            "entry": "main.css",
            "pattern": "**/*.css",
            "dependencies": []
        },
        "svg": {
            "src": "app/svg/optimized/",
            "dest": "web/svg/",
            "entry": "",
            "pattern": "**/*.svg",
            "dependencies": ["svgo"]
        },
        "svgo": {
            "src": "app/svg/initial/",
            "dest": "app/svg/optimized/",
            "entry": "",
            "pattern": "**/*.svg",
            "dependencies": []
        }
    },
    "plugins": {
        "autoprefixer": {
            "browsers": ["last 2 versions"],
            "flexbox": "no-2009",
            "grid": false
        },
        "babel": {
            "presets": ["env"]
        },
        "nano": {
            "discardComments": {
                "removeAll": true
            },
            "safe": true
        },
        "svgo": {
            "plugins": [{
                "removeViewBox": false,
                "removeTitle": false
            }]
        },
        "svgSymbols": {
            "fontSize": 100,
            "title": "%f icon",
            "class": ".icon-%f",
            "id": "icon-%f",
            "templates": ["default-svg", "default-css", "default-demo"]
        },
        "browserSync": {
            "open": false,
            "port": 3000
        }
    }
}
